{
  "name": "farmtally-backend",
  "version": "1.0.0",
  "description": "FarmTally - Corn Procurement Management System Backend",
  "main": "dist/server.minimal.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:simple": "tsx watch src/server.simple.ts",
    "build": "tsc && npm run copy-assets",
    "start": "node dist/server.minimal.js",
    "start:full": "node dist/server.js",
    "copy-assets": "cp -r src/public dist/ 2>/dev/null || true",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:simple": "node test-simple-backend.js",
    "test:delivery": "node test-delivery-system.js",
    "test:email": "node test-email-integration.js",
    "setup:email": "node setup-email-production.js",
    "test:auth": "node test-auth-flow.js",
    "lint": "eslint src/**/*.ts",
    "migrate": "prisma migrate deploy",
    "generate": "prisma generate",
    "seed": "tsx prisma/seed.ts",
    "db:setup": "npm run generate && npm run migrate && npm run seed",
    "health-check": "node scripts/health-check.js",
    "health-check:verbose": "node scripts/health-check.js --verbose",
    "health-check:json": "node scripts/health-check.js --json",
    "db:schema": "node apply-database-schema.js",
    "test:clean": "node test-clean-setup.js"
  },
  "dependencies": {
    "@prisma/client": "^6.17.1",
    "axios": "^1.12.2",
    "bcryptjs": "^2.4.3",
    "bull": "^4.16.5",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.9",
    "redis": "^5.8.3",
    "socket.io": "^4.8.1",
    "prisma": "^6.17.1",
    "tsx": "^4.6.0",
    "typescript": "^5.2.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/bull": "^3.15.9",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.8",
    "@types/joi": "^17.2.3",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.9.0",
    "@types/nodemailer": "^7.0.2",
    "@types/redis": "^4.0.10",
    "@types/socket.io": "^3.0.1",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "prisma": "^6.17.1",
    "tsx": "^4.6.0",
    "typescript": "^5.2.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
